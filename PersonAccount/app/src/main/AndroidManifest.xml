<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.my.account">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--注册页面-->
        <activity android:name=".RegisteredActivity"/>
        <!--主页面-->
        <activity android:name=".MainActivity" />
        <!--添加收入账单页面-->
        <activity android:name=".AddInAccount" />
        <!--添加支出账单页面-->
        <activity android:name=".AddOutAccount" />
        <!--更新收入账单页面-->
        <activity android:name=".UpdateInAccount" />
        <!--更新支出账单页面-->
        <activity android:name=".UpdateOutAccount" />
        <!--账单明细页面-->
        <activity android:name=".BillDetails" />
        <!--明细分析页面-->
        <activity android:name=".DetailedAnalysis" />

        <activity android:name=".TypeMangerInAccount"/>
        <activity android:name=".TypeMangerOutAccount"/>
        <activity android:name=".TypeIncomeItem"/>
        <activity android:name=".TypeExpendItem"/>
        <activity android:name=".AddTypeIncome"/>
        <activity android:name=".AddTypeExpend"/>
    </application>

</manifest>